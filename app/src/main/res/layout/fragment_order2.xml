<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/addorderbg"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user"/>
        <EditText
            android:id="@+id/findByUid"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:hint="按用户ID查找"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ordergoods"/>
        <EditText
            android:id="@+id/findByOid"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:hint="按订单ID查找"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ordertime"/>
        <EditText
            android:id="@+id/findByOtime"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:hint="按下单时间查找"/>
    </LinearLayout>
    <Button
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:background="@drawable/loading"
        android:text="确定"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>