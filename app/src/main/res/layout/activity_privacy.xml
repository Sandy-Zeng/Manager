<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chinasoft.com.logindemo.PrivacyActivity"
    android:orientation="vertical"
    android:background="#F0F3F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FF80AB">

        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="135dp" />
    </LinearLayout>


    <LinearLayout style="@style/wrap_layout">
        <LinearLayout style="@style/single_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/through_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  通过会员名找到我"
                android:checked="true"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="           关闭后，其他用户不能通过会员名找到您"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">
        <LinearLayout style="@style/single_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/through_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  通过手机号找到我"
                android:checked="false"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="           关闭后，其他用户不能通过手机号找到您"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
