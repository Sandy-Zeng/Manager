<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chinasoft.com.logindemo.ViewPagerlidingLayoutActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FF80AB">

        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp" />
    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="second"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <chinasoft.com.view.DragScrollDetailsLayout
        android:id="@+id/drag_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92"
        android:background="@color/white"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/p1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginTop="3dp">

                        <TextView
                            android:id="@+id/pname"
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:text="神奇的魔法水帮助你成为美美的小仙女 "
                            android:textSize="20sp"
                            android:textColor="#000000" />

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/pocket" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="分享有赏"
                                android:textColor="@color/colorFont" />

                        </LinearLayout>

                        "/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格："
                            android:textSize="20sp"
                            android:textColor="@color/colorFont" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:textSize="20sp"
                            android:textColor="@color/colorFont" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="官网售价："
                            android:textSize="15sp"
                            android:textColor="@color/secFont" />

                        <TextView
                            android:id="@+id/webPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:textSize="15sp"
                            android:textColor="@color/secFont" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品牌："
                            android:textSize="15sp"
                            android:textColor="@color/secFont" />

                        <TextView
                            android:id="@+id/brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:textSize="15sp"
                            android:textColor="@color/secFont" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="销量："
                            android:textSize="15sp"
                            android:textColor="@color/secFont" />

                        <TextView
                            android:id="@+id/sellAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:textSize="15sp"
                            android:textColor="@color/secFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发货地址："
                            android:textSize="15sp"
                            android:textColor="@color/secFont" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/secFont"
                            android:layout_marginLeft="3dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存："
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/secFont" />

                        <TextView
                            android:id="@+id/storeNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/secFont"
                            android:layout_marginLeft="3dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/select" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="过敏无忧"
                                android:textSize="15sp"
                                android:textColor="@color/colorFont" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/select" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="正品保证"
                                android:textSize="15sp"
                                android:textColor="@color/colorFont" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/select" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="极速直达"
                                android:textSize="15sp"
                                android:textColor="@color/colorFont" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/bg_line"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    style="@style/mid_layout"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/buy" />

                    <TextView
                        style="@style/usertext"
                        android:layout_marginLeft="10dp"
                        android:text="限时抢购进行中,手慢无！"
                        android:textColor="@color/colorFont" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    style="@style/mid_layout"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/credit" />

                    <TextView
                        style="@style/usertext"
                        android:layout_marginLeft="10dp"
                        android:text="购买可获得积分"
                        android:textColor="@color/colorFont" />
                </LinearLayout>

                <View
                    style="@style/bg_line"
                    android:layout_marginTop="10dp" />

                <View
                    style="@style/bg_line"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/flag_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/hint_text"
                    android:text="下拉查看商品详情"
                    android:textColor="@color/colorFont" />
            </LinearLayout>
        </ScrollView>


        <!-- 分页 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>


    </chinasoft.com.view.DragScrollDetailsLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@color/White">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/contect"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="contect"
                android:src="@drawable/kefu"
                android:layout_weight="4"/>
            <TextView
                android:onClick="contect"
                android:id="@+id/kefu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="咨询客服"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:textColor="@color/appColor" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/addtolike"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/like_press"
                android:layout_weight="4" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="添加到收藏"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/appColor"
                android:gravity="center" />

        </LinearLayout>


        <Button
            android:id="@+id/addtocart"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="添加到购物车"
            android:background="@color/appColor"
            android:textColor="@color/White"
            />

    </LinearLayout>

</LinearLayout>
